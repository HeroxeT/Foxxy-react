.textInputMainClass

  position relative
  display block
  height 50px
  overflow hidden

  &-text
    position absolute
    z-index 100
    top 20px
    left calc(50% - 140px)
    transition: 0.3s
    color textWhite
    user-select none

  &-input
    outline none
    color textWhite
    position absolute
    font-family MontserratR
    top 0
    padding-left 10px
    z-index: 10
    left calc(50% - 150px)
    width 300px
    height 50px
    border 0
    border-bottom 1px solid #FF7F49
    box-sizing border-box
    background-color rgba(28,28, 36, 1)

    &:valid + .textInputMainClass-text,
    &:focus + .textInputMainClass-text
      top 50px
