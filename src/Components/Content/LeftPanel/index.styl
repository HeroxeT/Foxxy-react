.leftPanel
  display flex
  flex-direction column
  align-items center
  position relative
  top 2px
  width 7vw
  transition width 0.3s ease-in-out
  overflow hidden
  height calc(100vh - 4px)



.logo
  margin-top: 20px;
  margin-right: 10px;
  width: 70px;
  height: 70px;
  user-select none

.navMenu

  height calc(100% - 90px)
  &-item
    z-index 100
    position relative
    width 40px
    height 40px
    margin 15px 5px
    list-style none
    user-select none

    .superPosLink
      display flex
      width 100%
      height 100%
      justify-content center
      align-items center

  .ended
    position: absolute;
    bottom 50px;

.background_gray
  z-index 10
  position absolute
  top: 145px
  border-radius 8px
  transition 0.3s
  background-color rgba(20,0,0,0.3);
