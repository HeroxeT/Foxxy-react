.AuthForm
  display flex
  opacity 1
  transition 0.2s
  flex-direction column
  box-sizing border-box
  padding 20px 0

  .title
    font-weight 900
    font-size 24px
    padding-left 20px
    padding-bottom 20px

  form
    *
      margin-bottom 20px

    .buttonsForForm
      width 300px
      margin auto
      margin-top 60px
      display flex
      justify-content: space-between

      &-button

        outline none
        cursor pointer
        width 146px
        margin 0
        border 0
        border-radius 4px
        border-top 1px solid orangeLight
        border-bottom 1px solid orangeLight
        color textWhite
        background-color rgba(28, 28, 36, 1)
        height 40px

