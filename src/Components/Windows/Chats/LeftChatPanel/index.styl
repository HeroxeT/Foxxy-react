.messageDialogs-list
  margin-top 70px
  list-style none
  display flex
  flex-direction column
  align-items center

  .messageDialogs-item
    width: 200px
    height: 60px
    display: flex

    overflow hidden
    align-items center
    border-radius 5px
    transition 0.2s

    &.active
      background-color blackBack !important

    &:hover
      background-color blackBack !important

    .avatar-50
      width 50px
      height 50px
      margin-left 5px
      margin-right 15px
      border-radius 15px
      user-select none
      overflow hidden
      display flex
      justify-content center
      align-items center

      &.darkA
        background-color blackBack

      &.lightA
        background-color: orangeLight

    .PersonStatus
      font-size 10px
      margin-top 8px

  .messageDialogs-item-line
    width 200px
    height 1px
    margin 6px 0
    background-color blackBack

    &:last-child
      display none

